FROM quay.io/fedora/fedora-kinoite:41

RUN cd /etc/yum.repos.d/ && \
    dnf update -y && \
    curl -LO https://developer.download.nvidia.com/compute/cuda/repos/fedora41/x86_64/cuda-fedora41.repo && \
    export KERNEL_UNAME=$(rpm -qa kernel --queryformat '%{VERSION}-%{RELEASE}.%{ARCH}') && \
    dnf install -y kernel-devel-$KERNEL_UNAME kernel-devel-matched-$KERNEL_UNAME && \
    dnf install -y nvidia-driver kmod-nvidia-latest-dkms nvidia-container-toolkit-base nvidia-driver-cuda-libs && \    
    dkms autoinstall -k $KERNEL_UNAME && \
    curl -LO https://download.docker.com/linux/fedora/docker-ce.repo && \
    dnf copr enable -y lizardbyte/stable && dnf install -y Sunshine emacs zsh docker-ce python-virtualenvwrapper \
    fzf && \
    rm -rf /var/cache/*
